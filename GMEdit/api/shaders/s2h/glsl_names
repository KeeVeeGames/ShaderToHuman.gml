// 2D
s2h_drawDisc(ui:ContextGather, pxCenter:vec2, pxRadius:float, color:vec4)->| Draw anti aliased filled disc
s2h_drawCircle(ui:ContextGather, pxCenter:vec2, pxRadius:float, color:vec4, pxThickness:float)->| Draw anti aliased circle
s2h_drawHalfSpace(ui:ContextGather, halfSpace:vec3, visualizePoint:vec2, color:vec4, pxCircleRadius:float, pxLineRadius:float)->| Draw anti aliased circle
s2h_drawRectangle(ui:ContextGather, pxLeftTop:vec2, pxBottomRight:vec2, color:vec4)->| Draw not anti aliased rectangle (fast and simple), pxLeftTop included, pxBottomRight excluded
s2h_drawRectangleAA(ui:ContextGather, pxA:vec2, pxB:vec2, borderColor:vec4, innerColor:vec4, pxThickness:float)->| Border half inwards and half outwards, pxThickness >0 results in rounded corners
s2h_drawCrosshair(ui:ContextGather, pxCenter:vec2, pxRadius:float, color:vec4, pxThickness:float)->| Anti aliased, px position should be pixel centered (+0.5)
s2h_drawLine(ui:ContextGather, pxBegin:vec2, pxEnd:vec2, color:vec4, pxThickness:float)->| Hard edges, anti aliased, px position should be pixel centered (+0.5)
s2h_drawArrow(ui:ContextGather, pxStart:vec2, pxEnd:vec2, color:vec4, arrowHeadLength:float, arrowHeadWidth:float)->| Anti aliased px position should be pixel centered (+0.5)
s2h_drawTriangle(ui:ContextGather, s2h_Triangle tri, color:vec4)->| Anti aliased px position should be pixel centered (+0.5)
s2h_drawSRGBRamp(ui:ContextGather, pxPos:vec2)->| 256x32 horizontal color ramp in sRGB space, 128 should be in the middle, RGB color gradient on outside


// UI
s2h_button(ui:ContextGather, widthInCharacters:int, statePos:vec2)->bool | statePos is the fragment position at which the interaction will be registered, returns true if clicked
s2h_radioButton(ui:ContextGather, checked:bool, statePos:vec2)->bool | statePos is the fragment position at which the interaction will be registered, returns true if clicked
s2h_checkBox(ui:ContextGather, checked:bool, statePos:vec2)->bool | statePos is the fragment position at which the interaction will be registered, returns true if clicked
s2h_progress(ui:ContextGather, widthInCharacters:int, fraction:float)->| Fraction 0..1
s2h_sliderFloat(ui:ContextGather, widthInCharacters:int, value:float, minValue:float, maxValue:float)->void
s2h_sliderRGB(ui:ContextGather, widthInCharacters:int, value:vec3)->| LDR color (0..1 range)
s2h_sliderRGBA(ui:ContextGather, widthInCharacters:int, value:vec4)->| LDR color (0..1 range) with alpha

// helper functions
s2h_accurateLinearToSRGB(linearCol:vec3)->vec3 | Slow but accurate
s2h_accurateSRGBToLinear(sRGBCol:vec3)->vec3 | Slow but accurate
s2h_indexToColor(index:int)->vec3 | Get pseudo-random color, 0 is black, repeats every 512 elements
s2h_colorRampRGB(value:float)->vec3

//

// 3D
Context3D
// ray origin
ro
// ray direction, normalized
rd
// surfacePos = ro + rd * depth
depth
//
dstColor

s2h_drawLineWS(context:Context3D, from:vec3, to:vec3, color:vec4, thickness:float)->void
s2h_drawAABB(context:Context3D, center:vec3, halfSize:vec3, color:vec4) | Axis Aligned Bounding Box
s2h_drawArrowWS(context:Context3D, from:vec3, to:vec3, color:vec4, thickness:float)->void
s2h_drawBasis(context:Context3D, worldFromObject:mat4, r:float)->void | worldFromObject aka objectToWorld, r in world space units
s2h_drawSphereWS(context:Context3D, pos:vec3, color:vec4, radius:float)->void
s2h_drawCheckerBoard(context:Context3D, offset:vec3)->void | 8x8 checker board with X (red) and Z (blue) around offset pointing up (Y+)
s2h_drawSkybox(context:Context3D)->void | Infinitely far, +/- X/Z and horizon, useful to having some background for the user to orient themselves