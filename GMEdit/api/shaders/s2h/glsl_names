// General

_S2H_PORT_VERSION
_S2H_VERSION

ContextGather
// in pixels, no fractional part (half pixel offset)
pxCursor
// 1/2/3/4
scale
// .xy:-100,-100 if not yet set, .xy:absolutePos, z:leftMouse 0/1, w:rightMouse 0/1, no fractional part (half pixel offset)
mouseInput
// window left top, no fractional part (half pixel offset), set by s2h_setPos(), used by s2h_printLF()
pxLeftX
// in pixels, no fractional part (half pixel offset), set by s2h_init()
pxPos
// premultiplied RGBA, alpha 1 is assumed to be opaque, don't init with a color or s2h_button() will not work
dstColor
// RGBA, alpha 1 is assumed to be opaque, s2h_progress()
textColor
// for s2h_frame()
frameFillColor
// for s2h_frame()
frameBorderColor
// for s2h_button(), s2h_checkbox(), s2h_radiobutton, s2h_progress(), s2h_sliderFloat()
buttonColor
//
lineWidth

s2h_Triangle

s2h_init(ui:ContextGather)->| or s2h_init(context:Context3D, ro:vec3, rd:vec3)->for 3D

// Print
s2h_setCursor(ui:ContextGather, inpxLeftTop:vec2)->| Set text cursor position, next printLF() will reset to this x position
s2h_deinit(ui:ContextGather, s2h_State:ivec4)->| Write int4 state for next frame, don't call if you don't want UI State
s2h_setScale(ui, scale:float)->void
s2h_printTxt(ui:ContextGather, _A, _b, _C, _d, _E, _f)->| Arguments are ASCII constans like _A, _b, _1, _SPACE
s2h_printSpace(ui:ContextGather, numberOfChars:float)->| Useful for table headers and to center text
s2h_printLF(ui:ContextGather)->| Jump to next line (line feed)
s2h_printInt(ui:ContextGather, value:int)->void
s2h_printHex(ui:ContextGather, value:int)->| Print hexadecimal e.g. "00A1" value is positive int e.g. 0x123, 0xff00
s2h_printFloat(ui:ContextGather, value:float)->void
s2h_printCharacter(ui:ContextGather, ascii:int)->| Don't use directly
s2h_printDisc(ui:ContextGather, color:vec4)->| Circle in a fontSize x fontSize character
s2h_printBox(ui:ContextGather, color:vec4)->| Block in a fontSize x fontSize character
s2h_frame(ui:ContextGather, widthInCharacters:int)->| Useful for table headers, similar to s2h_button but not interactive, call after using s2h_printTxt()

